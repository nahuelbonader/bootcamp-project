        "permissions": [
            {
                "resource": "users/*",
                "methods": [
                    "POST",
                    "GET",
                    "DELETE"
                ],
                "action": "allow"
            },
            {
                "resource": "productos/*",
                "methods": [
                    "POST",
                    "GET",
                    "PUT",
                    "DELETE"
                ],
                "action": "allow"
            }
        ]
    },
    {
        "group": "comprador",
        "permissions": [
            {
                "resource": "users/*",
                "methods": [
                    "POST",
                    "GET",
                    "PUT",
                    "DELETE"
                ],
                "action": "allow"
            },
            {
                "resource": "carros/*",
                "methods": [
                    "POST",
                    "GET",
                    "PUT",
                    "DELETE"
                ],
                "action": "allow"
            },
            {
                "resource": "products/*",
                "methods": [
                    "DELETE",
